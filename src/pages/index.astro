---
import Layout from "../layouts/Layout.astro";
import SparklesSVG from "../components/SparklesSVG.astro";
---
<style>
    .pretty-green-text-gradient {
        background-image: linear-gradient(to right, #89FFCC, #9EFF76);
        background-clip: text;
        color: transparent;
    }
</style>
<Layout activePage="home" title="STTNJ">
    <div class="grid intro">
        <div class="logotype">
            <div class="logo" style="width: 3rem; height: 3rem;">
                    <SparklesSVG></SparklesSVG>
                </div>
            <div>
                <p class="h3">STTNJ</p>
            </div>
        </div>
        <div class="content">
            <span class="h3">
                We're a student-run organization
                <span class="optional-line">teaching <span class="pretty-green-text-gradient">Comp Sci, Coding, & Robotics</span></span>
            </span>
        </div>
    </div>
    <div class="grid page">
        <div class="content">
            Free Coding Workshop
        </div>
    </div>
</Layout>
